{
  "name": "inflationary-token",
  "version": "1.0.0",
  "description": "An inflationary token.",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "test:upgrade": "cp ./.openzeppelin/mainnet.json ./.openzeppelin/unknown-31337.json && hardhat test ./test/Upgrade.js",
    "watch": "npm-watch",
    "ganache": "ganache-cli --deterministic --networkId 99",
    "fork": "INFURA_API_KEY=$(grep INFURA_API_KEY .env | cut -d '=' -f2) bash ./scripts/fork.sh",
    "coverage": "./node_modules/.bin/solidity-coverage",
    "lint:sol": "solium -d .",
    "lint:sol:fix": "solium -d . --fix",
    "migrate": "truffle migrate --reset --network local",
    "uselocal": "npx oz session --network local --from 0x90f8bf6a479f320ead074411a4b0e7944ea8c9c1 --expires 3600",
    "userinkeby": "npx oz session --network rinkeby --from 0x4Ff99Ad3f67C84CBC08b8Ab5a36dE17be1DB908f --expires 3600",
    "usemainnet": "npx oz session --network mainnet --from 0x4Ff99Ad3f67C84CBC08b8Ab5a36dE17be1DB908f --expires 3600"
  },
  "author": "Relevant",
  "license": "ISC",
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts-ethereum-package": "2.2.1",
    "@openzeppelin/hardhat-upgrades": "^1.9.0",
    "@openzeppelin/upgrades": "^2.5.3",
    "big-number": "^2.0.0",
    "bignumber.js": "^9.0.0",
    "chai": "^4.2.0",
    "chai-bignumber": "^3.0.0",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.5",
    "ethlint": "^1.2.5",
    "hardhat": "^2.6.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "npm-watch": "^0.11.0",
    "solidity-coverage": "^0.7.16",
    "web3": "^1.5.2"
  },
  "watch": {
    "test": {
      "patterns": [
        "test",
        "contracts"
      ],
      "extensions": "js,json,sol"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "solium -d . --fix"
    ]
  }
}

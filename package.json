{
  "name": "inflationary-token",
  "version": "1.0.0",
  "description": "An inflationary token.",
  "main": "index.js",
  "scripts": {
    "dev": "yarn ganache -q * sleep 3 & yarn migrate",
    "test": "NODE_ENV=test truffle test --network local",
    "watch": "npm-watch",
    "ganache": "ganache-cli --deterministic --networkId 99",
    "ganache:mainnet": "ganache-cli --fork https://mainnet.infura.io/v3/7d2819de98bb46108cae44811facb5e0",
    "coverage": "./node_modules/.bin/solidity-coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:sol": "solium -d .",
    "lint:sol:fix": "solium -d . --fix",
    "migrate": "truffle migrate --reset --network local",
    "uselocal": "npx oz session --network local --from 0x90f8bf6a479f320ead074411a4b0e7944ea8c9c1 --expires 3600",
    "userinkeby": "npx oz session --network rinkeby --from 0x4Ff99Ad3f67C84CBC08b8Ab5a36dE17be1DB908f --expires 3600",
    "usemainnet": "npx oz session --network mainnet --from 0x4Ff99Ad3f67C84CBC08b8Ab5a36dE17be1DB908f --expires 3600"
  },
  "author": "Achill Rudolph",
  "license": "ISC",
  "dependencies": {
    "@truffle/hdwallet-provider": "^1.0.24"
  },
  "devDependencies": {
    "@openzeppelin/cli": "^2.8.0",
    "@openzeppelin/upgrades": "^2.5.3",
    "big-number": "^2.0.0",
    "bignumber.js": "^9.0.0",
    "chai": "^4.2.0",
    "chai-bignumber": "^3.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "ethlint": "^1.2.5",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "npm-watch": "^0.6.0",
    "openzeppelin-eth": "^2.2.0",
    "prettier": "^1.19.1",
    "solidity-coverage": "^0.6.7",
    "truffle": "^5.1.0",
    "zos-lib": "^2.4.2"
  },
  "eslintIgnore": [
    "/coverage",
    "/node_modules"
  ],
  "watch": {
    "test": {
      "patterns": [
        "truffle",
        "test",
        "contracts"
      ],
      "extensions": "js,json,sol"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "solium -d . --fix",
      "git add"
    ]
  }
}
